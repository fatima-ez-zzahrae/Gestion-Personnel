<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- En-tÃªte: Nom et Statut -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvPersonnelName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nom PrÃ©nom"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorTextPrimary" />

                <TextView
                    android:id="@+id/tvPpr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PPR: 123456"
                    android:textSize="14sp"
                    android:textColor="@color/colorTextSecondary" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="En attente"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:background="@drawable/bg_status_pending"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <!-- Badge Type -->
        <com.google.android.material.chip.Chip
            android:id="@+id/tvType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONGE_ANNUEL"
            android:layout_marginBottom="8dp"
            app:chipBackgroundColor="@color/colorPrimaryLight"
            app:chipStrokeWidth="0dp" />

        <!-- PÃ©riode -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_calendar"
                android:tint="@color/colorPrimary"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvPeriod"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Du 01/01/2025 au 05/01/2025"
                android:textSize="14sp"
                android:textColor="@color/colorTextPrimary" />

            <TextView
                android:id="@+id/tvDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 jours"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>

        <!-- Solde de congÃ©s -->
        <TextView
            android:id="@+id/tvSoldeConges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ’¼ Solde: 30 jours"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <!-- Motif -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_note"
                android:tint="@color/colorTextSecondary"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvMotif"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Motif de l'absence"
                android:textSize="14sp"
                android:textColor="@color/colorTextSecondary"
                android:maxLines="2"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Badge de pÃ©nalitÃ© (fond rose) -->
        <LinearLayout
            android:id="@+id/layoutPenalite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFE5E5"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âš ï¸"
                android:textSize="16sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvPenaliteInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="PÃ©nalitÃ©: 48 jours dÃ©duits du solde"
                android:textSize="13sp"
                android:textColor="#D32F2F"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Justificatif -->
        <LinearLayout
            android:id="@+id/layoutJustificatif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_attachment"
                android:tint="@color/colorAccent"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvJustificatif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Justificatif prÃ©sent"
                android:textSize="12sp"
                android:textColor="@color/colorAccent"
                android:textStyle="italic" />

        </LinearLayout>

        <!-- Boutons d'action -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnValidate"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Valider"
                android:textSize="12sp"
                android:layout_marginEnd="8dp"
                app:icon="@drawable/ic_check" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDelete"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Supprimer"
                android:textSize="12sp"
                app:icon="@drawable/ic_delete"
                app:strokeColor="@android:color/holo_red_dark"
                android:textColor="@android:color/holo_red_dark"
                app:iconTint="@android:color/holo_red_dark" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>